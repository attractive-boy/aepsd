/* pages/user/user.wxss */

/* 全局样式 */
page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: #f5f5f5;
  padding: 20px;
  box-sizing: border-box;
}

/* 用户页面样式 */
.user-page {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.avatar-example {
  margin-bottom: 20px;
}

.avatar-example image {
  border-radius: 50%;
}

text {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

/* 卡片组样式 */
t-cell-group {
  width: 100%;
  margin-top: 20px;
}

t-cell {
  background-color: #ffffff;
  border-radius: 10px;
  margin-bottom: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
}

t-cell::before {
  border: none;
}

t-cell::after {
  border: none;
}

t-cell-title {
  font-size: 18px;
  color: #333;
}

t-cell-icon {
  font-size: 22px;
  color: #007aff;
}
.app-cell-group{
  width: 100%;
}